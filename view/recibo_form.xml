<?xml version="1.0"?>
<form>
    <label name="partner"/>
    <field name="partner"/>
    <label name="number"/>
    <field name="number"/>
    <label name="amount"/>
    <field name="amount"/>
    <label name="date"/>
    <field name="date"/>
    <notebook>
        <page id="receipt" string="Receipt">
            <label name="description"/>
            <field name="description" colspan="3"/>
            <label name="journal"/>
            <field name="journal"/>
            <label name="payment_method"/>
            <field name="payment_method"/>
            <label name="currency"/>
            <field name="currency"/>
            <label name="bank_account"/>
            <field name="bank_account"/>
        </page>
        <page id="info" string="Other Info">
            <label name="company"/>
            <field name="company"/>
            <label name="lote"/>
            <field name="lote"/>
            <label name="account"/>
            <field name="account"/>
            <label name="account_expense"/>
            <field name="account_expense"/>
            <label name="confirmed_move"/>
            <field name="confirmed_move"/>
            <label name="paid_move"/>
            <field name="paid_move"/>
            <label name="confirmed_cancel_move"/>
            <field name="confirmed_cancel_move"/>
            <label name="paid_cancel_move"/>
            <field name="paid_cancel_move"/>
            <label name="accounting_date"/>
            <field name="accounting_date"/>
        </page>
    </notebook>
    <group id="buttons" colspan="4" col="-1">
        <label name="state"/>
        <field name="state"/>
        <button name="cancel" icon="tryton-cancel"
            confirm="Are you sure to cancel the receipt?"/>
        <button name="confirm" icon="tryton-ok"/>
    </group>
</form>
