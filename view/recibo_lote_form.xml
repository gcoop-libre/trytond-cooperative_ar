<form>
    <label name="number" />
    <field name="number" />
    <label name="date" />
    <field name="date" />
    <label name="journal" />
    <field name="journal" />
    <label name="payment_method" />
    <field name="payment_method" />
    <label name="company"/>
    <field name="company"/>
    <newline />
    <label name="description"/>
    <field name="description" colspan="3"/>
    <notebook colspan="6">
        <page string="Recibos" id="lote" col="6">
            <field name="recibos" colspan="6"
                view_ids="cooperative_ar.recibo_line_view_tree_sequence"/>
            <group col="6" colspan="4" id="buttons">
                <label name="state"/>
                <field name="state"/>
                <button name="cancel" icon="tryton-cancel"
                    confirm="Are you sure to cancel the lote?"/>
                <button name="draft" icon="tryton-go-previous"/>
                <button name="confirm" icon="tryton-ok"/>
            </group>
        </page>
    </notebook>
</form>
